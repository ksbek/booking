.container.calendar-bookings[ng-controller="DashboardCalendarController"]
  h5 Select the days you're genarally free to host during the weeks:
  .row
    .col-sm-4
      table.explication-table
        tr
          td#td-mon[ng-click="weekday_Click('mon')" data-ng-class="{'bg-green': allDaySelected.mon}"] Mon
          td#td-mon[ng-click="weekday_Click('tue')" data-ng-class="{'bg-green': allDaySelected.tue}"] Tue
          td#td-mon[ng-click="weekday_Click('wed')" data-ng-class="{'bg-green': allDaySelected.wed}"] Wed
          td#td-mon[ng-click="weekday_Click('thu')" data-ng-class="{'bg-green': allDaySelected.thu}"] Thu
          td#td-mon[ng-click="weekday_Click('fri')" data-ng-class="{'bg-green': allDaySelected.fri}"] Fri
          td#td-mon[ng-click="weekday_Click('sat')" data-ng-class="{'bg-green': allDaySelected.sat}"] Sat
          td#td-mon[ng-click="weekday_Click('sun')" data-ng-class="{'bg-green': allDaySelected.sun}"] Sun
    .col-sm-3
      .legend-group.legend-available
        .bg-green
        .legend-note available
      .legend-group.legend-not-available
        .bg-white
        .legend-note not available
  h5 Select specific dates you are avalable to host:
  div.cal-btn-cont
    div.nxt[ng-click="doNextView()"] Next
    div.prev[ng-click="doPrevView()"] Prev

  #calendar-dashboard[append-calendar showid="{{showId}}"]
